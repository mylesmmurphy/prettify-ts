{
  "name": "@prettify-ts/vscode-extension",
  "displayName": "Prettify TypeScript: Better Type Previews",
  "description": "View \"prettified\" and nested types in hover tooltips and sidebar.",
  "publisher": "MylesMurphy",
  "license": "MIT",
  "version": "0.1.0",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.44.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mylesmmurphy/prettify-ts"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "typescriptServerPlugins": [{
        "name": "@prettify-ts/typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
    }],
    "configuration": {
      "title": "Prettify TS",
      "properties": {
        "prettify-ts.typeIndentation": {
          "type": "number",
          "default": 4
        },
        "prettify-ts.maxDepth": {
          "type": "number",
          "default": 2
        },
        "prettify-ts.maxProperties": {
          "type": "number",
          "default": 100,
          "description": "The maximum number of properties (including sub-properties) to show in a type preview."
        },
        "prettify-ts.maxSubProperties": {
          "type": "number",
          "default": 5,
          "description": "The maximum number of properties to show in a nested type."
        },
        "prettify-ts.unwrapFunctions": {
          "type": "boolean",
          "default": true
        },
        "prettify-ts.unwrapArrays": {
          "type": "boolean",
          "default": true
        },
        "prettify-ts.unwrapPromises": {
          "type": "boolean",
          "default": true
        },
        "prettify-ts.skippedTypeNames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["Element"],
          "description": "Types that won't be unwrapped, by name."
        },
        "prettify-ts.maxCharacters": {
          "type": "number",
          "default": 20000,
          "minimum": 0,
          "maximum": 99000,
          "description": "The maximum number of characters to show in a type preview. Max  (High performance impact)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "vscode:prepublish": "npm run esbuild",
    "esbuild": "esbuild ./src/extension.ts --bundle --minify --sourcemap --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.44.0",
    "esbuild": "^0.19.10",
    "mkdirp": "^3.0.1",
    "ncp": "^2.0.0"
  },
  "dependencies": {
    "typescript": "^5.3.3"
  }
}
