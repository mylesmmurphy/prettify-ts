{
  "name": "prettify-ts",
  "displayName": "Prettify TypeScript",
  "description": "VSCode TypeScript Extension to Prettify TypeScript types in hover tooltips.",
  "publisher": "MylesMurphy",
  "license": "MIT",
  "version": "0.0.2",
  "icon": "./assets/logo.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mylesmmurphy/prettify-ts"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prettify-ts.toggleHover",
        "title": "Prettify TS: Toggle Hover"
      }
    ],
    "configuration": {
      "title": "Prettify TS",
      "properties": {
        "prettify-ts.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Prettify TS hover tooltip."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "dependencies": {
    "prettier": "^3.1.1",
    "ts-morph": "^21.0.1",
    "typescript": "^5.3.3",
    "ulid": "^2.3.0"
  }
}
