{
  "name": "prettify-ts",
  "displayName": "Prettify TypeScript: Better Tooltips",
  "description": "Prettify TypeScript and view deeply nested types in hover tooltips.",
  "publisher": "MylesMurphy",
  "license": "MIT",
  "version": "0.0.4",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mylesmmurphy/prettify-ts"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prettify-ts.toggleHover",
        "title": "Prettify TS: Toggle Hover"
      },
      {
        "command": "prettify-ts.toggleViewNestedTypes",
        "title": "Prettify TS: Toggle View Nested Types"
      }
    ],
    "configuration": {
      "title": "Prettify TS",
      "properties": {
        "prettify-ts.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Prettify TS hover tooltip."
        },
        "prettify-ts.viewNestedTypes": {
          "type": "boolean",
          "default": false,
          "description": "Show or hide nested types."
        },
        "prettify-ts.ignoredNestedTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "String",
            "Number",
            "Boolean",
            "Date",
            "RegExp",
            "Function",
            "Symbol"
          ],
          "description": "Types that won't be expanded when viewing deeply nested types. These types need to be in the global or local scope, or else the extension will fail."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "vscode:prepublish": "npm run esbuild",
    "esbuild": "esbuild ./src/extension.ts --bundle --minify --sourcemap --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/prettier": "^2.7.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "dependencies": {
    "prettier": "^2.8.8",
    "ts-morph": "^21.0.1",
    "typescript": "^5.3.3",
    "ulid": "^2.3.0"
  }
}
