  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.44.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "fs-extra": "^11.3.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.30.1"
  }
}
