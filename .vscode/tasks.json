{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build root",
			"type": "shell",
			"command": "pnpm build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build test",
			"type": "shell",
			"command": "pnpm pretest",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build"
			}
		}
	]
}
